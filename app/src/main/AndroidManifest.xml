<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.github.galcyurio.freetodo">

    <application
        android:name="com.github.galcyurio.freetodo.app.TodoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.github.galcyurio.freetodo.mvp.view.activity.TaskActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.github.galcyurio.freetodo.mvp.view.activity.AddTaskActivity"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden"
            android:parentActivityName="com.github.galcyurio.freetodo.mvp.view.activity.TaskActivity"/>
    </application>

</manifest>