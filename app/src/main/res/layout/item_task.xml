<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/ti_background"
              android:layout_width="match_parent"
              android:layout_height="56dp"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:padding="8dp">

    <CheckBox
        android:id="@+id/ti_chkCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/anchor_task_item_checkbox_right_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ti_txtTitle"
            style="@style/Anchor.TextView.OneLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/anchor_task_item_title_bottom_margin"
            android:textSize="16sp"
            tools:text="Hello, world"/>

        <TextView
            android:id="@+id/ti_txtDescription"
            style="@style/Anchor.TextView.OneLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/anchor_task_item_description_text_size"
            tools:text="Hello, description"/>
    </LinearLayout>

</LinearLayout>